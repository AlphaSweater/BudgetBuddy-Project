<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BudgetBuddy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Custom attributes -->
        <item name="bb_background">@color/dark_background</item>
        <item name="bb_surface">@color/dark_shaded</item>
        <item name="bb_surfaceAlt">@color/dark_shaded_alt</item>
        <item name="bb_primaryText">@color/dark_text</item>
        <item name="bb_secondaryText">@color/dark_text_shaded</item>
        <item name="bb_accent">@color/button</item>
        <item name="bb_linkText">@color/dark_link_blue</item>

        <item name="bb_expense">@color/expense_red</item>
        <item name="bb_profit">@color/profit_green</item>
        <item name="bb_button">@color/button</item>
        <item name="bb_buttonText">@android:color/white</item>
        <item name="bb_buttonSelected">@color/dark_button_selected</item>

        <!-- Material 3 theme attributes -->
        <item name="colorPrimary">@color/button</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/dark_shaded</item>
        <item name="colorOnPrimaryContainer">@color/dark_text</item>
        <item name="colorSecondary">@color/dark_shaded_alt</item>
        <item name="colorOnSecondary">@color/dark_text_shaded</item>
        <item name="colorSecondaryContainer">@color/dark_shaded_alt</item>
        <item name="colorOnSecondaryContainer">@color/dark_text_shaded</item>
        <item name="colorTertiary">@color/button</item>
        <item name="colorOnTertiary">@android:color/white</item>
        <item name="colorTertiaryContainer">@color/dark_shaded</item>
        <item name="colorOnTertiaryContainer">@color/dark_text</item>
        <item name="colorSurface">@color/dark_shaded</item>
        <item name="colorOnSurface">@color/dark_text</item>
        <item name="colorSurfaceVariant">@color/dark_shaded_alt</item>
        <item name="colorOnSurfaceVariant">@color/dark_text_shaded</item>
        <item name="colorOutline">@android:color/transparent</item>
        <item name="colorOutlineVariant">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Remove outlines globally -->
        <item name="materialCardViewStyle">@style/Widget.BudgetBuddy.CardView</item>
        <item name="textInputStyle">@style/Widget.BudgetBuddy.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.BudgetBuddy.Button</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.BudgetBuddy.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.BudgetBuddy.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.BudgetBuddy.LargeComponent</item>

        <item name="bottomNavigationStyle">@style/Widget.BudgetBuddy.BottomNavigationView</item>
    </style>

    <style name="Widget.BudgetBuddy.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="itemRippleColor">?attr/bb_surfaceAlt</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Remove outlines from MaterialCardView -->
    <style name="Widget.BudgetBuddy.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Remove outlines from TextInputLayout -->
    <style name="Widget.BudgetBuddy.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <!-- Remove outlines from MaterialButton -->
    <style name="Widget.BudgetBuddy.Button" parent="Widget.Material3.Button">
        <item name="strokeWidth">0dp</item>
    </style>
</resources>
