<?xml version="1.0" encoding="utf-8"?>
    <resources>
        <!-- Customize the DatePickerDialog -->
        <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
            <!-- Customize the title color (top text) -->
            <item name="android:textColorPrimary">@android:color/black</item>
            <!-- Customize other elements, e.g., button color -->
            <item name="android:buttonBarNegativeButtonStyle">@android:color/black</item>
            <item name="android:buttonBarPositiveButtonStyle">@android:color/black</item>
        </style>

        <!-- Row Style: Consistent look for all rows -->
        <style name="RowStyle">
            <!-- Layout size -->
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>

            <!-- Spacing -->
            <item name="android:paddingTop">8dp</item>
            <item name="android:paddingBottom">8dp</item>
            <item name="android:paddingStart">16dp</item>
            <item name="android:paddingEnd">16dp</item>

            <!-- Gravity for alignment -->
            <item name="android:gravity">center_vertical</item>

            <!-- Minimum height for touch target -->
            <item name="android:minHeight">48dp</item>

            <!-- Ripple effect when clicked -->
            <item name="android:background">?attr/selectableItemBackground</item>

            <!-- Make it clickable/focusable if needed -->
            <item name="android:clickable">true</item>
            <item name="android:focusable">true</item>
        </style>

        <!-- Row Icon Style -->
        <style name="RowIconStyle">
            <!-- Size of the icon -->
            <item name="android:layout_width">24dp</item>
            <item name="android:layout_height">24dp</item>

            <!-- Margin to text -->
            <item name="android:layout_marginEnd">16dp</item>

            <!-- Tint color (optional) -->
            <item name="android:tint">?attr/colorControlNormal</item>

            <!-- Scale inside ImageView -->
            <item name="android:scaleType">centerInside</item>
        </style>

        <!-- Bottom Sheet Dialog Styles -->
        <style name="FullScreenBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
            <item name="bottomSheetStyle">@style/FullScreenBottomSheetStyle</item>
        </style>

        <style name="FullScreenBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
            <item name="android:layout_height">match_parent</item>
        </style>

    <!-- Recurrence Option Style -->
    <style name="RecurrenceOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/bb_primaryText</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>
