<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BudgetBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Custom attributes -->
        <item name="bb_background">@color/light_background</item>
        <item name="bb_surface">@color/light_shaded</item>
        <item name="bb_surfaceAlt">@color/light_shaded_alt</item>
        <item name="bb_primaryText">@color/light_text</item>
        <item name="bb_secondaryText">@color/light_text_shaded</item>
        <item name="bb_accent">@color/button</item>
        <item name="bb_linkText">@color/light_link_blue</item>

        <item name="bb_expense">@color/expense_red</item>
        <item name="bb_profit">@color/profit_green</item>
        <item name="bb_button">@color/button</item>
        <item name="bb_buttonSelected">@color/light_button_selected</item>

        <!-- Material theme compatibility (fallback) -->
        <item name="colorPrimary">@color/light_shaded</item>
        <item name="colorPrimaryVariant">@color/light_shaded</item>
        <item name="colorOnPrimary">@color/light_text</item>
        <item name="colorSecondary">@color/light_shaded_alt</item>
        <item name="colorOnSecondary">@color/light_text_shaded</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="bottomNavigationStyle">@style/Widget.BudgetBuddy.BottomNavigationView</item>
    </style>

    <style name="Widget.BudgetBuddy.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
    </style>
</resources>
