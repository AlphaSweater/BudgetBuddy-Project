<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bb_background">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/btnGoBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back"
                    android:src="?attr/actionModeCloseDrawable"
                    app:tint="?attr/bb_primaryText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="110dp"
                    android:text="Account"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="98dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:id="@+id/rowSelectProfile"
                        style="@style/RowStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_circle_24"
                                android:scaleType="centerCrop"
                                app:tint="?attr/bb_primaryText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_ui_user"
                                app:tint="?attr/bb_background" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/textSelectedUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Doe"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textSelectedUserEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="JohnDOe@gmail.com"
                                android:textColor="?attr/bb_secondaryText"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView
                            style="@style/IconButton"
                            android:src="@drawable/ic_ui_croc_right"
                            app:tint="?attr/bb_secondaryText" />
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:id="@+id/rowSelectDarkMode"
                        style="@style/RowStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rowSelectProfile">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_circle_24"
                                app:tint="?attr/bb_primaryText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_ui_dark"
                                app:tint="?attr/bb_background" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enable Dark Mode"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <Switch
                            android:id="@+id/switchDarkMode"
                            android:trackTint="?attr/bb_primaryText"
                            android:thumbTint="?attr/bb_primaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:id="@+id/rowSelectEnableNotifications"
                        style="@style/RowStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rowSelectDarkMode">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_circle_24"
                                app:tint="?attr/bb_primaryText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_ui_notification"
                                app:tint="?attr/bb_background" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enable Notifications"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <Switch
                            android:id="@+id/switchNotifications"
                            android:trackTint="?attr/bb_primaryText"
                            android:thumbTint="?attr/bb_primaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <!-- Row 4 -->
                    <LinearLayout
                        android:id="@+id/rowSelectCategories"
                        style="@style/RowStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rowSelectEnableNotifications">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_circle_24"
                                app:tint="?attr/bb_primaryText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_ui_categories"
                                app:tint="?attr/bb_background" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textSelectedCategories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Categories"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <ImageView
                            style="@style/IconButton"
                            android:src="@drawable/ic_ui_croc_right"
                            app:tint="?attr/bb_secondaryText" />
                    </LinearLayout>

                    <!-- Row 5 -->
                    <LinearLayout
                        android:id="@+id/rowSelectScheduledTransactions"
                        style="@style/RowStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rowSelectCategories">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_circle_24"
                                app:tint="?attr/bb_primaryText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_ui_calendar"
                                app:tint="?attr/bb_background" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textSelectedScheduledTransactions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scheduled Transactions"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <ImageView
                            style="@style/IconButton"
                            android:src="@drawable/ic_ui_croc_right"
                            app:tint="?attr/bb_secondaryText" />
                    </LinearLayout>

                    <!-- Row 6 -->
                    <LinearLayout
                        android:id="@+id/rowSelectPrivacySettings"
                        style="@style/RowStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rowSelectScheduledTransactions">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_circle_24"
                                app:tint="?attr/bb_primaryText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_ui_privacy_shield"
                                app:tint="?attr/bb_background" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textSelectedPrivacySettings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Privacy Settings"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <ImageView
                            style="@style/IconButton"
                            android:src="@drawable/ic_ui_croc_right"
                            app:tint="?attr/bb_secondaryText" />
                    </LinearLayout>

                    <!-- Row 7 -->
                    <LinearLayout
                        android:id="@+id/rowSelectSecuritySettings"
                        style="@style/RowStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rowSelectPrivacySettings">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_circle_24"
                                app:tint="?attr/bb_primaryText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_ui_security_fingerprint"
                                app:tint="?attr/bb_background" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textSelectedSecuritySettings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Security Settings"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <ImageView
                            style="@style/IconButton"
                            android:src="@drawable/ic_ui_croc_right"
                            app:tint="?attr/bb_secondaryText" />
                    </LinearLayout>

                    <!-- Row 8 -->
                    <LinearLayout
                        android:id="@+id/rowSelectAchievements"
                        style="@style/RowStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rowSelectSecuritySettings">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_circle_24"
                                app:tint="?attr/bb_primaryText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_ui_achievement_trophy"
                                app:tint="?attr/bb_background" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textSelectedAchievements"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Achievements"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <ImageView
                            style="@style/IconButton"
                            android:src="@drawable/ic_ui_croc_right"
                            app:tint="?attr/bb_secondaryText" />
                    </LinearLayout>

                    <!-- Row 9 -->
                    <LinearLayout
                        android:id="@+id/rowSelectLogout"
                        style="@style/RowStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rowSelectAchievements">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_circle_24"
                                app:tint="?attr/bb_primaryText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_ui_logout"
                                app:tint="?attr/bb_background" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textSelectedLogout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logout"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <ImageView
                            style="@style/IconButton"
                            android:src="@drawable/ic_ui_croc_right"
                            app:tint="?attr/bb_secondaryText" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
