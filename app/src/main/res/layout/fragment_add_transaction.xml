<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RecureIcon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".presentation.ui.main.addTransaction.AddTransactionFragment">

    <ImageButton
        android:id="@+id/btnBackTransaction"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:src="?attr/actionModeCloseDrawable"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crdVwTransactions"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="?attr/bb_surface"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Category Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_circle_24"
                    app:tint="@color/button" />

                <TextView
                    android:id="@+id/btnSelectCat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/select_category"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />
            </LinearLayout>
            <!-- ========================================================== -->

            <!-- Wallet Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_account_balance_wallet_24"
                    app:tint="?attr/bb_button" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/wallet"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnWallet"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@null"
                    android:rotation="180"
                    android:src="?attr/actionModeCloseDrawable"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <!-- ========================================================== -->

            <!-- Currency Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_attach_money_24"
                    app:tint="?attr/bb_button" />

                <Spinner
                    android:id="@+id/currencySpinner2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <!-- ========================================================== -->

            <!-- Amount Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/amountIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_email_24"
                    app:tint="?attr/bb_button" />

                <EditText
                    android:id="@+id/editTextNumberDecimal"
                    android:layout_marginStart="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Amount"
                    android:inputType="numberDecimal" />
            </LinearLayout>
            <!-- ========================================================== -->

            <!-- Calender Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_calendar_month_24"
                    app:tint="?attr/bb_button" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Date"
                    android:inputType="date" />

                <ImageButton
                    android:id="@+id/btnBackCalender"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@null"
                    android:rotation="180"
                    android:src="?attr/actionModeCloseDrawable" />
            </LinearLayout>
            <!-- ========================================================== -->

            <!-- Note Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="editIcon"
                    android:src="@drawable/ic_edit_note_24"
                    app:tint="?attr/bb_button" />

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:hint="Write a Note"
                    android:textColorHint="?attr/bb_primaryText"
                    android:textColor="?attr/bb_primaryText"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <!-- ========================================================== -->

            <!-- label Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_discount_24"
                    app:tint="?attr/bb_button" />

                <TextView
                    android:id="@+id/lblLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/label"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnLabel"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="?attr/actionModeCloseDrawable" />
            </LinearLayout>
            <!-- ========================================================== -->

            <!-- Photo Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Photo Icon"
                    android:src="@drawable/ic_add_photo_alternate_24"
                    app:tint="?attr/bb_button" />

                <TextView
                    android:id="@+id/lblPhoto"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/add_photo"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnBackPhoto"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="?attr/actionModeCloseDrawable" />
            </LinearLayout>
            <!-- ========================================================== -->

            <!-- Recurrence Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_autorenew_24"
                    app:tint="?attr/bb_button" />

                <TextView
                    android:id="@+id/lblRecure"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/recurrence"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnRecurrence"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="?attr/actionModeCloseDrawable" />
            </LinearLayout>
            <!-- ========================================================== -->

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="54dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:backgroundTint="?attr/bb_button"
        app:cornerRadius="24dp" />

</LinearLayout>