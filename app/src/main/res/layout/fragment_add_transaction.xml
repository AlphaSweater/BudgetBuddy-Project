<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RecureIcon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ui.addTransaction.AddTransactionFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <ImageButton
        android:id="@+id/btnBackTransaction"
        android:layout_width="76dp"
        android:layout_height="44dp"
        android:background="@null"
        android:src="?attr/actionModeCloseDrawable"
        tools:ignore="TouchTargetSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crdVwTransactions"
        android:layout_width="372dp"
        android:layout_height="780dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="?attr/bb_surface"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingVertical="12dp">

            <!-- ================= Select Category Layout ================= -->
            <LinearLayout
                android:layout_width="354dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_circle_24"
                    app:tint="@color/button" />

                <Space
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_category"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>
            <!-- ========================================================== -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <!-- ===================== Wallet Layout ===================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_account_balance_wallet_24"
                    app:tint="?attr/bb_button" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnWallet"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="?attr/actionModeCloseDrawable"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <!-- ========================================================== -->


            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <!-- ==================== Currency Layout ==================== -->
            <LinearLayout
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/currencyIcon"
                    android:layout_width="34dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_attach_money_24"
                    app:tint="?attr/bb_button" />

                <Space
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblCurrency"
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:text="@string/currency"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <Spinner
                        android:id="@+id/currencySpinner"
                        android:layout_width="318dp"
                        android:layout_height="34dp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="110dp"
                        android:layout_height="2dp"
                        android:background="?android:attr/listDivider" />
                </LinearLayout>

            </LinearLayout>
            <!-- ========================================================== -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <!-- ====================== Amount Layout ====================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/amountIcon"
                    android:layout_width="34dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_email_24"
                    app:tint="?attr/bb_button"/>

                <Space
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="59dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblAmount"
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <EditText
                        android:id="@+id/editTextNumberDecimal"
                        android:layout_width="132dp"
                        android:layout_height="34dp"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>
            <!-- ========================================================== -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <!-- ==================== Calender Layout ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_calendar_month_24"
                    app:tint="?attr/bb_button" />

                <Space
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblCalender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:text="@string/calender"
                        android:textColor="?attr/bb_primaryText"/>

                    <EditText
                        android:id="@+id/editTextDate"
                        android:layout_width="162dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="date"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnBackCalender"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="?attr/actionModeCloseDrawable"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <!-- ========================================================== -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <!-- ================== Write a Note Layout =================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="37dp"
                    android:contentDescription="editIcon"
                    android:src="@drawable/ic_edit_note_24"
                    app:tint="?attr/bb_button" />

                <Space
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lblNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnBackNote"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="?attr/actionModeCloseDrawable"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <!-- ========================================================== -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <!-- ====================== Label Layout ====================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_discount_24"
                    app:tint="?attr/bb_button" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lblLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnBackLabel"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="?attr/actionModeCloseDrawable"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>
            <!-- ========================================================== -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <!-- =================== Add a Photo Layout ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="35dp"
                    android:contentDescription="Photo Icon"
                    android:src="@drawable/ic_add_photo_alternate_24"
                    app:tint="?attr/bb_button" />

                <Space
                    android:layout_width="13dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lblPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_photo"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnBackPhoto"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="?attr/actionModeCloseDrawable"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <!-- ========================================================== -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <!-- =================== Recurrence Layout =================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_autorenew_24"
                    app:tint="?attr/bb_button" />

                <Space
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lblRecure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recurrence"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnBackRecure"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="?attr/actionModeCloseDrawable"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <!-- ========================================================== -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />


            <!-- ================== Set a Reminder Layout ================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_add_alert_24"
                    app:tint="?attr/bb_button" />

                <Space
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lblAlert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_reminder"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnBackReminder"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="?attr/actionModeCloseDrawable"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <!-- ========================================================== -->

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>