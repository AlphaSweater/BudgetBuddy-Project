<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_add_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.ui.main.addTransaction.AddTransactionFragment">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnGoBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@null"
        android:contentDescription="@string/back"
        android:src="?attr/actionModeCloseDrawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/bb_primaryText" />

    <!-- Main Card -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGoBack">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_transaction_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/bb_surface"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Category Row -->
                <LinearLayout
                    android:id="@+id/rowSelectCategory"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_circle_24"
                        app:tint="?attr/bb_button" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/select_category"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Wallet Row -->
                <LinearLayout
                    android:id="@+id/rowSelectWallet"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_account_balance_wallet_24"
                        app:tint="?attr/bb_button" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/wallet"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:rotation="180"
                        android:src="?attr/actionModeCloseDrawable" />
                </LinearLayout>

                <!-- ðŸ”„ Combine Currency & Amount into one row -->
                <LinearLayout
                    android:id="@+id/rowCurrencyAmount"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/baseline_savings_24"
                        app:tint="?attr/bb_button" />

                    <!-- Amount Input -->
                    <EditText
                        android:id="@+id/edtTextAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/amount"
                        android:inputType="numberDecimal"
                        android:textColor="?attr/bb_primaryText"
                        android:textColorHint="?attr/bb_primaryText" />

                    <!-- Spacer -->
                    <View
                        android:layout_width="16dp"
                        android:layout_height="0dp" />

                    <!-- Currency Spinner -->
                    <Spinner
                        android:id="@+id/spinnerCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:spinnerMode="dropdown"
                        tools:ignore="TouchTargetSizeCheck" />


                </LinearLayout>

                <!-- Date Row -->
                <LinearLayout
                    android:id="@+id/rowSelectDate"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_calendar_month_24"
                        app:tint="?attr/bb_button" />

                    <EditText
                        android:id="@+id/edtTextDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="@string/date"
                        android:inputType="date"
                        android:textColor="?attr/bb_primaryText"
                        android:textColorHint="?attr/bb_primaryText" />
                </LinearLayout>

                <!-- Note Row -->
                <LinearLayout
                    android:id="@+id/rowSelectNote"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_edit_note_24"
                        app:tint="?attr/bb_button" />

                    <EditText
                        android:id="@+id/edtTextNote"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/write_a_note"
                        android:inputType="text"
                        android:textColor="?attr/bb_primaryText"
                        android:textColorHint="?attr/bb_primaryText" />
                </LinearLayout>

                <!-- Label Row -->
                <LinearLayout
                    android:id="@+id/rowSelectLabel"
                    style="@style/RowStyle"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/RowIconStyle"
                            android:src="@drawable/ic_discount_24"
                            app:tint="?attr/bb_button" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/label"
                            android:textColor="?attr/bb_primaryText"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:background="@null"
                            android:rotation="180"
                            android:src="?attr/actionModeCloseDrawable" />
                    </LinearLayout>

                    <!-- Chip Group for Selected Labels -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupLabels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"
                        app:chipSpacing="4dp"
                        app:singleLine="false" />
                </LinearLayout>

                <!-- Recurrence Row -->
                <LinearLayout
                    android:id="@+id/rowSelectRecurrenceRate"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_autorenew_24"
                        app:tint="?attr/bb_button" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/recurrence"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:rotation="180"
                        android:src="?attr/actionModeCloseDrawable" />
                </LinearLayout>

                <!-- Photo Row -->
                <LinearLayout
                    android:id="@+id/rowSelectPhoto"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_add_photo_alternate_24"
                        app:tint="?attr/bb_button" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/add_photo"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:rotation="180"
                        android:src="?attr/actionModeCloseDrawable" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:adjustViewBounds="true"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxHeight="180dp"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <!-- Save Button sticks to bottom -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="?attr/bb_button"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
