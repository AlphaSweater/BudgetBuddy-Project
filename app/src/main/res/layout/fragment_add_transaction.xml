<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_add_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.ui.main.addTransaction.AddTransactionFragment">

    <!-- Top Back Button -->
    <ImageButton
        android:id="@+id/btnBackTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="307dp"
        android:background="@null"
        android:contentDescription="@string/back"
        android:src="?attr/actionModeCloseDrawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_transaction_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="?attr/bb_surface"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBackTransaction">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Category Row -->
            <LinearLayout
                android:id="@+id/rowSelectCategory"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    android:src="@drawable/ic_circle_24"
                    app:tint="?attr/bb_button" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/select_category"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Wallet Row -->
            <LinearLayout
                android:id="@+id/rowSelectWallet"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    android:src="@drawable/ic_account_balance_wallet_24"
                    app:tint="?attr/bb_button" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/wallet"
                    android:textSize="18sp"
                    android:textColor="?attr/bb_primaryText"
                    android:gravity="center_vertical" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="?attr/actionModeCloseDrawable"
                    android:rotation="180"
                    android:background="@null" />
            </LinearLayout>

            <!-- Currency Row -->
            <LinearLayout
                android:id="@+id/rowSelectCurrency"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    android:src="@drawable/ic_attach_money_24"
                    app:tint="?attr/bb_button" />

                <Spinner
                    android:id="@+id/spinnerCurrency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <!-- Amount Row -->
            <LinearLayout
                android:id="@+id/rowSelectAmount"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    android:src="@drawable/ic_email_24"
                    app:tint="?attr/bb_button" />

                <EditText
                    android:id="@+id/edtTextAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/amount"
                    android:inputType="numberDecimal"
                    android:textColor="?attr/bb_primaryText"
                    android:textColorHint="?attr/bb_primaryText" />
            </LinearLayout>

            <!-- Date Row -->
            <LinearLayout
                android:id="@+id/rowSelectDate"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    android:src="@drawable/ic_calendar_month_24"
                    app:tint="?attr/bb_button" />

                <EditText
                    android:id="@+id/edtTextDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/date"
                    android:inputType="date"
                    android:textColor="?attr/bb_primaryText"
                    android:textColorHint="?attr/bb_primaryText" />
            </LinearLayout>

            <!-- Note Row -->
            <LinearLayout
                android:id="@+id/rowSelectNote"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    android:src="@drawable/ic_edit_note_24"
                    app:tint="?attr/bb_button" />

                <EditText
                    android:id="@+id/edtTextNote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/write_a_note"
                    android:inputType="text"
                    android:textColor="?attr/bb_primaryText"
                    android:textColorHint="?attr/bb_primaryText" />
            </LinearLayout>

            <!-- Label Row -->
            <LinearLayout
                android:id="@+id/rowSelectLabel"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    android:src="@drawable/ic_discount_24"
                    app:tint="?attr/bb_button" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/label"
                    android:textSize="18sp"
                    android:textColor="?attr/bb_primaryText"
                    android:gravity="center_vertical" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="?attr/actionModeCloseDrawable"
                    android:rotation="180"
                    android:background="@null" />
            </LinearLayout>

            <!-- Photo Row -->
            <LinearLayout
                android:id="@+id/rowSelectPhoto"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    android:src="@drawable/ic_add_photo_alternate_24"
                    app:tint="?attr/bb_button" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/add_photo"
                    android:textSize="18sp"
                    android:textColor="?attr/bb_primaryText"
                    android:gravity="center_vertical" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="?attr/actionModeCloseDrawable"
                    android:rotation="180"
                    android:background="@null" />
            </LinearLayout>

            <!-- Recurrence Row -->
            <LinearLayout
                android:id="@+id/rowSelectRecurrenceRate"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    android:src="@drawable/ic_autorenew_24"
                    app:tint="?attr/bb_button" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/recurrence"
                    android:textSize="18sp"
                    android:textColor="?attr/bb_primaryText"
                    android:gravity="center_vertical" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="?attr/actionModeCloseDrawable"
                    android:rotation="180"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="?attr/bb_button"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_transaction_form"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="98dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
