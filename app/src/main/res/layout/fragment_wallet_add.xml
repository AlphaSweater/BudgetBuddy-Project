<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bb_background">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/btnGoBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back"
                    android:src="?attr/actionModeCloseDrawable"
                    app:tint="?attr/bb_primaryText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add New Wallet"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="98dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Wallet Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/bb_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Wallet Name Row -->
                    <LinearLayout
                        android:id="@+id/rowSelectWalletName"
                        style="@style/RowStyle"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:minHeight="72dp">

                        <FrameLayout
                            android:id="@+id/btnWalletEdit"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:id="@+id/ivWalletIcon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_wallet_24"
                                app:tint="?attr/bb_button" />

                            <ImageView
                                android:id="@+id/ivEdit"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="bottom|end"
                                android:layout_marginEnd="-2dp"
                                android:layout_marginBottom="-2dp"
                                android:src="@drawable/ic_edit_24"
                                app:tint="?attr/bb_button" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wallet Name"
                                android:textColor="?attr/bb_secondaryText"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/edtWalletName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Enter wallet name"
                                android:inputType="text"
                                android:textColor="?attr/bb_primaryText"
                                android:textColorHint="?attr/bb_secondaryText"
                                android:textSize="16sp"
                                android:minHeight="40dp"
                                android:gravity="center_vertical"
                                android:paddingVertical="4dp" />

                            <!-- Error for wallet name -->
                            <TextView
                                android:id="@+id/textNameError"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="?attr/bb_secondaryText" />

                    <!-- Currency Row -->
                    <LinearLayout
                        android:id="@+id/rowSelectCurrency"
                        style="@style/RowStyle"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:minHeight="72dp">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_money_24"
                                app:tint="?attr/bb_button" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Currency"
                                android:textColor="?attr/bb_secondaryText"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spinnerCurrency"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@null"
                                android:spinnerMode="dropdown" />

                            <!-- Error for currency -->
                            <TextView
                                android:id="@+id/textCurrencyError"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="?attr/bb_secondaryText" />

                    <!-- Initial Amount Row -->
                    <LinearLayout
                        android:id="@+id/rowSelectInitialAmount"
                        style="@style/RowStyle"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:minHeight="72dp">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_edit_note_24"
                                app:tint="?attr/bb_button" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Initial Amount"
                                android:textColor="?attr/bb_secondaryText"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/edtInitialAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="0.00"
                                android:inputType="numberDecimal"
                                android:textColor="?attr/bb_primaryText"
                                android:textColorHint="?attr/bb_secondaryText"
                                android:textSize="16sp"
                                android:minHeight="40dp"
                                android:gravity="center_vertical"
                                android:paddingVertical="4dp" />

                            <!-- Error for initial amount -->
                            <TextView
                                android:id="@+id/textAmountError"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Options Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/bb_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Notifications Row -->
                    <LinearLayout
                        android:id="@+id/rowSelectEnableNotifications"
                        style="@style/RowStyle"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enable Notifications"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Get notified when there are changes to this wallet's transactions"
                                android:textColor="?attr/bb_secondaryText"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <Switch
                            android:id="@+id/switchNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="?attr/bb_secondaryText" />

                    <!-- Exclude from Total Row -->
                    <LinearLayout
                        android:id="@+id/rowSelectExcludeTotal"
                        style="@style/RowStyle"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Exclude from Total"
                                android:textColor="?attr/bb_primaryText"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Ignore this wallet and its balance in the Total Balance"
                                android:textColor="?attr/bb_secondaryText"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <Switch
                            android:id="@+id/switchExcludeTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Save Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/bb_background"
        android:elevation="8dp"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="?attr/bb_button"
            app:cornerRadius="16dp" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
