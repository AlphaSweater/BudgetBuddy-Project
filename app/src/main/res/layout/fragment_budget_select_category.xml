<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnGoBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="?attr/actionModeCloseDrawable"
            android:background="@null"
            android:contentDescription="@string/back"
            app:tint="?attr/bb_primaryText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/txtChooseCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose a Category"
                android:textColor="?attr/bb_primaryText"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnAddCategory"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_circle_40"
                android:background="@null" />
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewExpenseCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            tools:listitem="@layout/item_transaction_category"/>

    </LinearLayout>
</FrameLayout>