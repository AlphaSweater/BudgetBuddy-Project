<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bb_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnGoBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="?attr/actionModeCloseDrawable"
            android:background="@null"
            android:contentDescription="@string/back"
            app:tint="?attr/bb_primaryText" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a Label"
            android:textColor="?attr/bb_primaryText"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold" />

        <!-- Search Box -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search or add new labels"
            android:background="@drawable/bg_rounded_edit_grey"
            android:drawableStart="@drawable/ic_circle_24"
            android:drawableTint="?attr/bb_secondaryText"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="?attr/bb_primaryText"
            android:textColorHint="?attr/bb_secondaryText"
            android:inputType="text" />

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewLabels"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</FrameLayout>
