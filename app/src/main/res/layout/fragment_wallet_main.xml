<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bb_background"
    tools:context=".presentation.ui.main.wallet.WalletMainFragment">

    <!-- Currency Label (ZAR) -->
    <TextView
        android:id="@+id/tvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="16dp"
        android:text="ZAR"
        android:textColor="?attr/bb_primaryText"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Total Currency Amount -->
    <TextView
        android:id="@+id/tvCurrencyTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="12,200"
        android:textColor="?attr/bb_profit"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvCurrency"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Eye Icon to Toggle Visibility -->
    <ImageView
        android:id="@+id/ivEye"
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_view"
        app:tint="?attr/bb_primaryText"
        app:layout_constraintStart_toEndOf="@+id/tvCurrencyTotal"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Text Label "Total Balance" -->
    <TextView
        android:id="@+id/tvTotalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:text="Total Balance"
        android:textColor="?attr/bb_secondaryText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrencyTotal" />

    <!-- Wallet Create Button-->
    <Button
        android:id="@+id/btnCreateWallet"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="Create Wallet"
        android:textColor="@android:color/white"
        app:backgroundTint="?attr/bb_button"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalBalance" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWalletMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateWallet" />
</androidx.constraintlayout.widget.ConstraintLayout>
