<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bb_background"
    android:foregroundTint="#3F51B5"
    tools:context=".ui.wallet.WalletMainFragment">

    <TextView
        android:id="@+id/textView_currency_total2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:text="ZAR"
        android:textColor="?attr/bb_primaryText"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_currency_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="186dp"
        android:layout_marginTop="16dp"
        android:text="12,200"
        android:textColor="?attr/bb_profit"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_eye"
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:tint="?attr/bb_primaryText"
        android:src="@android:drawable/ic_menu_view"
        app:layout_constraintStart_toEndOf="@+id/textView_currency_total"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_total_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:text="Total Balance"
        android:textColor="?attr/bb_secondaryText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_currency_total" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_graph"
        android:layout_width="0dp"
        android:layout_height="330dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="?attr/bb_surface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_overview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="440dp"
        android:backgroundTint="?attr/bb_surface"
        android:padding="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_spending_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Spending Overview"
                android:textColor="?attr/bb_primaryText"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.262"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/arrowIcon1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="4dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:rotation="270"
                android:tint="?attr/bb_primaryText"
                android:src="@android:drawable/arrow_down_float"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_wallet1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="?attr/bb_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView_overview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/walletIcon1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_account_balance_wallet_24"
                android:tint="?attr/bb_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/walletName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Cash Wallet"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/bb_primaryText"
                app:layout_constraintStart_toEndOf="@id/walletIcon1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_currency1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="6dp"
                android:text="ZAR"
                android:textColor="?attr/bb_primaryText"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/walletIcon1"
                app:layout_constraintTop_toBottomOf="@id/walletName1" />

            <TextView
                android:id="@+id/textView_wallet_amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginTop="6dp"
                android:text="6,000"
                android:textColor="?attr/bb_profit"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/walletIcon1"
                app:layout_constraintTop_toBottomOf="@id/walletName1" />

            <ImageView
                android:id="@+id/arrowIcon2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:rotation="270"
                android:tint="?attr/bb_primaryText"
                android:src="@android:drawable/arrow_down_float"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/button_add"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="?attr/bb_button"
            android:tint="?attr/bb_button"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="812dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_input_add"
            app:layout_constraintBottom_toBottomOf="@+id/button_add"
            app:layout_constraintEnd_toEndOf="@+id/button_add"
            app:layout_constraintStart_toStartOf="@+id/button_add"
            app:layout_constraintTop_toTopOf="@+id/button_add" />

</androidx.constraintlayout.widget.ConstraintLayout>
