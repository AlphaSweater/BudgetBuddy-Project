<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.main.budget.budgetHomePage.BudgetHomeFragment">

        <!-- Container for Current Budgets -->
        <LinearLayout
            android:id="@+id/current_budgets_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/bb_surface"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Title -->
            <TextView
                android:id="@+id/current_budgets_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="Current Budgets"
                android:textStyle="bold"
                android:textColor="?attr/bb_primaryText"
                android:textSize="20sp" />

            <!-- Horizontal Layout for Columns -->
            <LinearLayout
                android:id="@+id/columns_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <!-- Column 01/2025 -->
                <TextView
                    android:id="@+id/column_012025"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="01/2025"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="16sp" />

                <!-- Column LAST MONTH -->
                <TextView
                    android:id="@+id/column_last_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="LAST MONTH"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="16sp" />

                <!-- Column THIS MONTH -->
                <LinearLayout
                    android:id="@+id/column_this_month_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/column_this_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="THIS MONTH"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="16sp" />

                    <!-- Underline -->
                    <View
                        android:id="@+id/underline"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="?attr/bb_primaryText" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <!-- Create Budget Button -->
    <LinearLayout
        android:id="@+id/budget_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_budgets_container">

        <!-- Total Budget -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ZAR 4,000"
                android:textColor="?attr/bb_primaryText"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total budget"
                android:textColor="?attr/bb_secondaryText"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Total Spent -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ZAR 1,100"
                android:textColor="?attr/bb_primaryText"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total spent"
                android:textColor="?attr/bb_secondaryText"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Days Remaining -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="26 days"
                android:textColor="?attr/bb_primaryText"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="End of month"
                android:textColor="?attr/bb_secondaryText"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/create_budget_button"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:text="Create Budget"
        android:textColor="@android:color/white"
        app:backgroundTint="?attr/bb_button"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/budget_container" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/budget_card"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:backgroundTint="?attr/bb_surface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_budget_button">

        <!-- Budget Item Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/budget_item_container"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:padding="16dp">

            <!-- Icon (Burger) -->
            <ImageView
                android:id="@+id/budget_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Budget Icon"
                android:paddingRight="8dp"
                android:src="@drawable/baseline_fastfood_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="?attr/colorOnPrimary"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Budget Info -->
            <LinearLayout
                android:id="@+id/budget_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/arrow_icon"
                app:layout_constraintStart_toEndOf="@id/budget_icon"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/budget_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food And Drinks"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/budget_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R 1,500 spent of R 2,000"
                    android:textColor="?attr/bb_secondaryText"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Navigation Arrow -->
            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Navigate"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>