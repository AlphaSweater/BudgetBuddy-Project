<!--                    android:contentDescription="Arrow"/>-->
<!--            </LinearLayout>-->

            <!-- Start Date -->
            <LinearLayout
                android:id="@+id/rowStartDate"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    app:tint="?attr/bb_button"
                    android:src="@drawable/ic_calendar_month_24" />

                <TextView
                    android:id="@+id/start_date_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/start_date"
                    android:textColor="?attr/bb_primaryText"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/start_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/bb_secondaryText"
                    android:text="Today"/>

                <ImageView
                    android:id="@+id/start_date_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    app:tint="?attr/colorOnPrimary"
                    android:contentDescription="Arrow"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="@string/save"
        android:textColor="?attr/bb_primaryText"
        android:textSize="18sp"
        app:backgroundTint="?attr/bb_button"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/budget_details_card"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="98dp" />
</androidx.constraintlayout.widget.ConstraintLayout>