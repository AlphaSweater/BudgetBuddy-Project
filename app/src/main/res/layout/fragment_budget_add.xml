<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.main.budget.budgetAdd.BudgetAddFragment">

    <!-- Top Bar (Back Arrow + Title) -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="?attr/bb_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_budget"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/bb_primaryText"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnGoBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:contentDescription="@string/back"
        android:src="?attr/actionModeCloseDrawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/bb_primaryText" />
    <!-- Budget Details Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/budget_details_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/bb_surface"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Budget Details Section -->
        <LinearLayout
            android:id="@+id/budgetDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Budget Name -->
        <LinearLayout
            android:id="@+id/rowSelectBudgetName"
            style="@style/RowStyle">

            <ImageView
                style="@style/RowIconStyle"
                app:tint="?attr/bb_button"
                android:src="@drawable/ic_account_balance_wallet_24" />

            <EditText
                android:id="@+id/budget_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/budget_name"
                android:textColor="?attr/bb_primaryText"
                android:textColorHint="?attr/bb_primaryText"
                android:textSize="16sp"/>
        </LinearLayout>

            <!-- Amount and Currency -->
            <LinearLayout
                android:id="@+id/rowAmountAndCurrency"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    app:tint="?attr/bb_button"
                    android:src="@drawable/baseline_savings_24" />

                <EditText
                    android:id="@+id/amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/amount"
                    android:inputType="numberDecimal"
                    android:textColor="?attr/bb_primaryText"
                    android:textColorHint="?attr/bb_primaryText"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/currency_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>

            <!-- Budget Category -->
            <LinearLayout
                android:id="@+id/rowBudgetFor"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    app:tint="?attr/bb_button"
                    android:src="@drawable/ic_edit_note_24" />

                <TextView
                    android:id="@+id/budget_for_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Budget for"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/budget_for_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/bb_secondaryText"
                    android:text="All Expenses"/>

                <ImageView
                    android:id="@+id/budget_for_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:contentDescription="Arrow"
                    app:tint="?attr/colorOnPrimary"/>
            </LinearLayout>

