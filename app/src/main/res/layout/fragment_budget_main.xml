<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.main.budget.BudgetMainFragment">

        <!-- Container for Current Budgets -->
    <LinearLayout
        android:id="@+id/current_budgets_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/bb_surface"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/current_budgets_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:text="Current Budgets"
            android:textColor="?attr/bb_primaryText"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/monthlySpendingGoalCard"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="?attr/bb_surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_budgets_container">

        <!-- Monthly Goal Row -->
        <LinearLayout
            android:id="@+id/rowMonthlyGoal"
            style="@style/RowStyle"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"
            android:background="?attr/bb_surface"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/current_budgets_container"
            tools:layout_editor_absoluteX="21dp">

            <!-- Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/monthlyGoalTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Monthly Spending Goal"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/editGoalIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Edit Goal"
                    android:src="@drawable/ic_edit_24"
                    app:tint="?attr/bb_primaryText" />
            </LinearLayout>

            <!-- Min - Max Range Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Minimum)"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="R 500"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="----"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    android:text="R 5,000"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Maximum)"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/goalProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/darker_gray"
                android:clipToOutline="true"
                android:max="100"
                android:progress="10"
                android:progressTint="?attr/bb_button" />

            <!-- Spent Text Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have currently spent"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text=" R 500 "
                    android:textColor="?attr/bb_profit"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="out of"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text=" R 5,000 "
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Create Budget Button -->
    <Button
        android:id="@+id/create_budget_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="Create Budget"
        android:textColor="@android:color/white"
        app:backgroundTint="?attr/bb_button"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthlySpendingGoalCard" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/budget_card"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="?attr/bb_surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_budget_button">

        <!-- Budget Item Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/budgetItemContainer"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:padding="16dp">

            <!-- Icon (Burger) -->
            <ImageView
                android:id="@+id/budgetIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Budget Icon"
                android:paddingRight="8dp"
                android:src="@drawable/baseline_fastfood_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/colorOnPrimary" />

            <!-- Budget Info -->
            <LinearLayout
                android:id="@+id/budgetDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/arrowIconBudget"
                app:layout_constraintStart_toEndOf="@id/budgetIcon"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/budgetTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food And Drinks"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/budgetStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R 1,500 spent of R 2,000"
                    android:textColor="?attr/bb_secondaryText"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Navigation Arrow -->
            <ImageView
                android:id="@+id/arrowIconBudget"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Navigate"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/colorOnPrimary" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>