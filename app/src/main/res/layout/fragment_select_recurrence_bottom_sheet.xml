<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_top"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:padding="24dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnGoBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="?attr/actionModeCloseDrawable"
            android:contentDescription="@string/back"
            app:tint="?attr/bb_primaryText" />

        <!-- Title -->
        <TextView
            android:id="@+id/txtRecurrence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Recurrence"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/bb_primaryText"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Scrollable Options -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:dividerPadding="8dp">

                <!-- Reusable styled recurrence options -->
                <TextView android:id="@+id/optionEveryDay" style="@style/RecurrenceOption" android:text="Every day" />
                <TextView android:id="@+id/optionEveryTwoDays" style="@style/RecurrenceOption" android:text="Every 2 days" />
                <TextView android:id="@+id/optionEveryWorkDay" style="@style/RecurrenceOption" android:text="Every work day" />
                <TextView android:id="@+id/optionEveryWeek" style="@style/RecurrenceOption" android:text="Every week" />
                <TextView android:id="@+id/optionEveryWeek2" style="@style/RecurrenceOption" android:text="Every 2 weeks" />
                <TextView android:id="@+id/optionEveryWeek4" style="@style/RecurrenceOption" android:text="Every 4 weeks" />
                <TextView android:id="@+id/optionEveryMonth" style="@style/RecurrenceOption" android:text="Every month" />
                <TextView android:id="@+id/optionEveryMonth2" style="@style/RecurrenceOption" android:text="Every 2 months" />
                <TextView android:id="@+id/optionEveryMonth3" style="@style/RecurrenceOption" android:text="Every 3 months" />
                <TextView android:id="@+id/optionEveryMonth6" style="@style/RecurrenceOption" android:text="Every 6 months" />
                <TextView android:id="@+id/optionEveryYear" style="@style/RecurrenceOption" android:text="Every year" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
