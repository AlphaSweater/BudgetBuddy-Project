<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_add_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.ui.main.transaction.TransactionAddFragment">

    <!-- Top Bar (Back Arrow + Title) -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_transaction"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/bb_primaryText"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnGoBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:contentDescription="@string/back"
        android:src="?attr/actionModeCloseDrawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/bb_primaryText" />


    <!-- Main Card -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGoBack">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_transaction_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/bb_surface"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Category Row -->
                <LinearLayout
                    android:id="@+id/rowSelectCategory"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_circle_24"
                        app:tint="?attr/bb_button" />

                    <!-- Container for Wallet title and selected name -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <!-- Top Label -->
                        <TextView
                            android:id="@+id/textCategoryLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/category"
                            android:textColor="?attr/bb_primaryText"
                            android:textSize="18sp" />

                        <!-- Selected wallet name -->
                        <TextView
                            android:id="@+id/textSelectedCategoryName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No category selected"
                            android:textColor="?attr/bb_secondaryText"
                            android:textSize="14sp"
                            android:visibility="visible"
                            android:paddingTop="2dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:rotation="180"
                        android:src="?attr/actionModeCloseDrawable" />
                </LinearLayout>

                <!-- Wallet Row -->
                <LinearLayout
                    android:id="@+id/rowSelectWallet"
                    style="@style/RowStyle"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_account_balance_wallet_24"
                        app:tint="?attr/bb_button" />

                    <!-- Container for Wallet title and selected name -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <!-- Top Label -->
                        <TextView
                            android:id="@+id/textWalletLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wallet"
                            android:textColor="?attr/bb_primaryText"
                            android:textSize="18sp" />

                        <!-- Selected wallet name -->
                        <TextView
                            android:id="@+id/textSelectedWalletName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No wallet selected"
                            android:textColor="?attr/bb_secondaryText"
                            android:textSize="14sp"
                            android:visibility="visible"
                            android:paddingTop="2dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:rotation="180"
                        android:src="?attr/actionModeCloseDrawable" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rowCurrencyAmount"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/baseline_savings_24"
                        app:tint="?attr/bb_button" />

                    <!-- Amount Input -->
                    <EditText
                        android:id="@+id/edtTextAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/amount"
                        android:inputType="numberDecimal"
                        android:textColor="?attr/bb_primaryText"
                        android:textColorHint="?attr/bb_primaryText" />

                    <!-- Spacer -->
                    <View
                        android:layout_width="16dp"
                        android:layout_height="0dp" />

                    <!-- Currency Spinner -->
                    <Spinner
                        android:id="@+id/spinnerCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:spinnerMode="dropdown"
                        tools:ignore="TouchTargetSizeCheck" />


                </LinearLayout>

                <!-- Date Row -->
                <LinearLayout
                    android:id="@+id/rowSelectDate"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_calendar_month_24"
                        app:tint="?attr/bb_button" />

                    <EditText
                        android:id="@+id/edtTextDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="@string/date"
                        android:inputType="date"
                        android:textColor="?attr/bb_primaryText"
                        android:textColorHint="?attr/bb_primaryText" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:rotation="180"
                        android:src="?attr/actionModeCloseDrawable" />
                </LinearLayout>

                <!-- Note Row -->
                <LinearLayout
                    android:id="@+id/rowSelectNote"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_edit_note_24"
                        app:tint="?attr/bb_button" />

                    <EditText
                        android:id="@+id/edtTextNote"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Description"
                        android:inputType="text"
                        android:textColor="?attr/bb_primaryText"
                        android:textColorHint="?attr/bb_primaryText" />
                </LinearLayout>

