                <!-- Recurrence Row -->
                <LinearLayout
                    android:id="@+id/rowSelectRecurrenceRate"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_autorenew_24"
                        app:tint="?attr/bb_button" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <!-- Top Label -->
                        <TextView
                            android:id="@+id/textRecurrenceRateLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/recurrence"
                            android:textColor="?attr/bb_primaryText"
                            android:textSize="18sp" />

                        <!-- Selected wallet name -->
                        <TextView
                            android:id="@+id/textSelectedRecurrenceRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No selected recurrence rate"
                            android:textColor="?attr/bb_secondaryText"
                            android:textSize="14sp"
                            android:visibility="visible"
                            android:paddingTop="2dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:rotation="180"
                        android:src="?attr/actionModeCloseDrawable" />
                </LinearLayout>

                <!-- Photo Row -->
                <LinearLayout
                    android:id="@+id/rowSelectPhoto"
                    style="@style/RowStyle">

                    <ImageView
                        style="@style/RowIconStyle"
                        android:src="@drawable/ic_add_photo_alternate_24"
                        app:tint="?attr/bb_button" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/add_photo"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:rotation="180"
                        android:src="?attr/actionModeCloseDrawable" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:adjustViewBounds="true"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxHeight="180dp"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <!-- Save Button sticks to bottom -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="?attr/bb_button"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
