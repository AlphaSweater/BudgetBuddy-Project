<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bb_background">

    <!-- Header with back button and title -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="?attr/bb_surface"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBackTransaction"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@null"
            android:src="?attr/actionModeCloseDrawable"
            app:tint="?attr/bb_primaryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvAddNewWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Wallet"
            android:textColor="?attr/bb_primaryText"
            android:textSize="26dp"
            app:layout_constraintStart_toEndOf="@id/btnBackTransaction"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Form Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWalletForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/bb_surface"
            android:padding="16dp">


            <!-- Wallet Name Row -->
            <LinearLayout
                android:id="@+id/rowSelectWalletName"
                style="@style/RowStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <ImageView
                    android:id="@+id/ivWalletIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_account_balance_wallet_24"
                    app:tint="?attr/bb_button" />

                <EditText
                    android:id="@+id/edtWalletName"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="?attr/bb_primaryText"
                    android:gravity="center_vertical"
                    android:hint="Wallet Name"
                    android:inputType="text"
                    android:layout_marginLeft="6dp"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>


            <!-- Currency Row -->
            <LinearLayout
                android:id="@+id/rowSelectCurrency"
                style="@style/RowStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSelectWalletName">

                <ImageView
                    android:id="@+id/ivCurrencyIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_account_balance_wallet_24"
                    app:tint="?attr/bb_button" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="6dp">

                    <TextView
                        android:id="@+id/tvCurrencyHeader"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Currency"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="14dp"
                        app:layout_c="parent" />

                    <EditText
                        android:id="@+id/edtCurrency"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="?attr/bb_primaryText"
                        android:hint="ZAR"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent" />
                </LinearLayout>

            </LinearLayout>


            <!-- Initial Amount Row -->
            <LinearLayout
                android:id="@+id/rowSelectInitialAmount"
                style="@style/RowStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSelectCurrency">

                <ImageView
                    android:id="@+id/ivInitialAmountIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_account_balance_wallet_24"
                    app:tint="?attr/bb_button" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvInitialAmountHeader"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Initial Amount"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="14dp"
                        app:layout_c="parent" />

                    <EditText
                        android:id="@+id/edtInitialAmount"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="?attr/bb_primaryText"
                        android:hint="0"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

            </LinearLayout>

            <!-- Share Wallet Row -->
            <LinearLayout
                android:id="@+id/rowSelectShareWallet"
                style="@style/RowStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSelectInitialAmount">

                <ImageView
                    android:id="@+id/ivShareWalletIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_attach_money_24"
                    app:tint="?attr/bb_button" />

                <TextView
                    android:id="@+id/tvShareWallet"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="-10dp"
                    android:backgroundTint="?attr/bb_surface"
                    android:inputType="text"
                    android:text="Share Wallet"
                    android:textColor="?attr/bb_secondaryText"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@id/ivCurrencyIcon"
                    app:layout_constraintTop_toTopOf="@id/ivCurrencyIcon" />

                <ImageView
                    android:id="@+id/arrowIcon1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="255dp"
                    android:layout_marginTop="285dp"
                    android:rotation="270"
                    android:src="@android:drawable/arrow_down_float"
                    android:tint="?attr/bb_primaryText"
                    app:layout_constraintStart_toEndOf="@+id/tvShareWallet"
                    app:layout_constraintStart_toStartOf="@id/tvShareWallet"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>


            <!-- Enable Notifications Row-->

            <LinearLayout
                android:id="@+id/rowSelectEnableNotifications"
                style="@style/RowStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSelectShareWallet">

                <TextView
                    android:id="@+id/tvEnableNotifications"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Enable Notifications"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvNotificationsInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Get notified when there are changes to this walletâ€™s transactions."
                    android:textColor="?attr/bb_secondaryText"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvEnableNotifications" />

                <Switch
                    android:id="@+id/switchNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvEnableNotifications" />


                <!-- Exclude from Total Row -->

                <LinearLayout
                    android:id="@+id/rowSelectExcludeTotal"
                    style="@style/RowStyle">

                    <TextView
                        android:id="@+id/tvExcludeFromTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Exclude from Total"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toStartOf="@id/switchExcludeTotal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNotificationsInfo" />

                    <TextView
                        android:id="@+id/tvExcludeInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Ignore this wallet and its balance in the Total Balance."
                        android:textColor="?attr/bb_secondaryText"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvExcludeFromTotal" />

                    <Switch
                        android:id="@+id/switchExcludeTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvExcludeFromTotal" />

                </LinearLayout>

            </LinearLayout>

            <!-- Exclude from Total Row -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="?attr/bb_button"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardWalletForm" />

</androidx.constraintlayout.widget.ConstraintLayout>
