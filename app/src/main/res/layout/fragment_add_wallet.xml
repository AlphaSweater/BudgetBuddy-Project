<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bb_background">

    <!-- Header with back button and title -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="?attr/bb_surface"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBackTransaction"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@null"
            android:src="?attr/actionModeCloseDrawable"
            android:tint="?attr/bb_primaryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvAddNewWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Wallet"
            android:textColor="?attr/bb_primaryText"
            android:textSize="26dp"
            app:layout_constraintStart_toEndOf="@id/btnBackTransaction"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Form Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWalletForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/bb_surface"
            android:padding="16dp">

            <!-- Wallet Name -->
            <ImageView
                android:id="@+id/ivWalletIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_account_balance_wallet_24"
                android:tint="?attr/bb_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etWalletName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="?attr/bb_primaryText"
                android:hint="Wallet Name"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivWalletIcon"
                app:layout_constraintTop_toTopOf="@id/ivWalletIcon" />

            <!-- Currency -->
            <ImageView
                android:id="@+id/ivCurrencyIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_attach_money_24"
                android:tint="?attr/bb_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etWalletName" />


            <EditText
                android:id="@+id/etCurrencyLbl"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-10dp"
                android:backgroundTint="?attr/bb_surface"
                android:inputType="text"
                android:text="Currency"
                android:textColor="?attr/bb_secondaryText"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@id/ivCurrencyIcon"
                app:layout_constraintTop_toTopOf="@id/ivCurrencyIcon" />

            <EditText
                android:id="@+id/etCurrency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="?attr/bb_primaryText"
                android:hint="Currency"
                android:inputType="text"
                android:text="ZAR"
                app:layout_constraintStart_toEndOf="@id/ivCurrencyIcon"
                app:layout_constraintTop_toTopOf="@id/ivCurrencyIcon" />

            <!-- Initial Amount -->
            <ImageView
                android:id="@+id/ivMoneyIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_edit_note_24"
                android:tint="?attr/bb_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etCurrency" />


            <EditText
                android:id="@+id/etInitialAmountlbl"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-10dp"
                android:backgroundTint="?attr/bb_surface"
                android:inputType="text"
                android:text="Initial Amount"
                android:textColor="?attr/bb_secondaryText"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@id/ivMoneyIcon"
                app:layout_constraintTop_toTopOf="@id/ivMoneyIcon" />

            <EditText
                android:id="@+id/etInitialAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="?attr/bb_primaryText"
                android:hint="Initial Amount"
                android:inputType="numberDecimal"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivMoneyIcon"
                app:layout_constraintTop_toTopOf="@id/ivMoneyIcon" />

            <!-- Share Wallet Section -->

            <ImageView
                android:id="@+id/ivShareIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_notifications_black_24dp"
                android:tint="?attr/bb_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etInitialAmount" />

            <TextView
                android:id="@+id/tvShareWallet"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:text="Share Wallet with Other People"
                android:textColor="?attr/bb_primaryText"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@id/ivShareIcon"
                app:layout_constraintTop_toTopOf="@id/ivShareIcon" />

            <!-- Enable Notifications -->

            <ImageView
                android:id="@+id/arrowIcon1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="255dp"
                android:layout_marginTop="285dp"
                android:rotation="270"
                android:src="@android:drawable/arrow_down_float"
                android:tint="?attr/bb_primaryText"
                app:layout_constraintStart_toEndOf="@+id/tvShareWallet"
                app:layout_constraintStart_toStartOf="@id/tvShareWallet"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvEnableNotifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Enable Notifications"
                android:textColor="?attr/bb_primaryText"
                android:textSize="18dp"
                app:layout_constraintEnd_toStartOf="@id/switchNotifications"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivShareIcon" />

            <Switch
                android:id="@+id/switchNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvEnableNotifications" />

            <TextView
                android:id="@+id/tvNotificationsInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Get notified when there are changes to this walletâ€™s transactions."
                android:textColor="?attr/bb_secondaryText"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEnableNotifications" />

            <!-- Exclude from Total -->
            <TextView
                android:id="@+id/tvExcludeFromTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Exclude from Total"
                android:textColor="?attr/bb_primaryText"
                android:textSize="18dp"
                app:layout_constraintEnd_toStartOf="@id/switchExcludeTotal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNotificationsInfo" />

            <Switch
                android:id="@+id/switchExcludeTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvExcludeFromTotal" />

            <TextView
                android:id="@+id/tvExcludeInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Ignore this wallet and its balance in the Total Balance."
                android:textColor="?attr/bb_secondaryText"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvExcludeFromTotal" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="?attr/bb_button"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardWalletForm" />

</androidx.constraintlayout.widget.ConstraintLayout>
