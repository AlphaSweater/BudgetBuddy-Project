<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bb_background">

    <!-- Header with back button and title -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="?attr/bb_surface"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/btnGoBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@null"
            android:src="?attr/actionModeCloseDrawable"
            app:tint="?attr/bb_primaryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Title Text -->
        <TextView
            android:id="@+id/tvAddNewWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Wallet"
            android:textColor="?attr/bb_primaryText"
            android:textSize="26dp"
            app:layout_constraintStart_toEndOf="@id/btnGoBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Card containing the wallet creation form -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWalletForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Container for the form inputs -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/bb_surface"
            android:padding="16dp">

            <!-- Row for entering Wallet Name -->
            <LinearLayout
                android:id="@+id/rowSelectWalletName"
                style="@style/RowStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Wallet icon with edit icon slightly overlapping bottom-right -->
                <FrameLayout
                    android:layout_width="49dp"
                    android:layout_height="48dp">

                    <!-- Wallet icon -->
                    <ImageView
                        android:id="@+id/ivWalletIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_account_balance_wallet_24"
                        app:tint="?attr/bb_button" />

                    <!-- Edit icon slightly overlapping -->
                    <ImageView
                        android:id="@+id/ivEdit"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="-4dp"
                        android:layout_marginBottom="-4dp"
                        android:src="@drawable/ic_edit_24"
                        app:tint="?attr/bb_button" />
                </FrameLayout>

                <!-- Wallet name input field -->
                <EditText
                    android:id="@+id/edtWalletName"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="?attr/bb_primaryText"
                    android:gravity="center_vertical"
                    android:hint="Wallet Name"
                    android:inputType="text"
                    android:layout_marginLeft="6dp"
                    app:layout_constraintEnd_toEndOf="parent" />
            </LinearLayout>


            <!-- Row for selecting Currency -->
            <LinearLayout
                android:id="@+id/rowSelectCurrency"
                style="@style/RowStyle"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSelectWalletName">

                <!-- Currency icon -->
                <ImageView
                    android:id="@+id/ivCurrencyIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_attach_money_24"
                    app:tint="?attr/bb_button" />

                <!-- Currency input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical">

                    <!-- Currency label -->
                    <TextView
                        android:id="@+id/tvCurrencyHeader"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Currency"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="14dp" />

                    <!-- Currency input field -->
                    <EditText
                        android:id="@+id/edtCurrency"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="?attr/bb_primaryText"
                        android:hint="ZAR"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent" />
                </LinearLayout>
            </LinearLayout>


            <!-- Row for entering Initial Amount -->
            <LinearLayout
                android:id="@+id/rowSelectInitialAmount"
                style="@style/RowStyle"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSelectCurrency">

                <!-- Initial Amount icon -->
                <ImageView
                    android:id="@+id/ivInitialAmountIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_edit_note_24"
                    app:tint="?attr/bb_button" />

                <!-- Initial Amount input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical">

                    <!-- Label -->
                    <TextView
                        android:id="@+id/tvInitialAmountHeader"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Initial Amount"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="14dp" />

                    <!-- Input field -->
                    <EditText
                        android:id="@+id/edtInitialAmount"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="?attr/bb_primaryText"
                        android:hint="0"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent" />
                </LinearLayout>
            </LinearLayout>


            <!-- Row for sharing the wallet -->
            <LinearLayout
                android:id="@+id/rowSelectShareWallet"
                style="@style/RowStyle"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSelectInitialAmount">

                <!-- Share wallet icon -->
                <ImageView
                    android:id="@+id/ivShareWalletIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_share_24"
                    app:tint="?attr/bb_button" />

                <!-- Share wallet text -->
                <TextView
                    android:id="@+id/tvShareWallet"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:backgroundTint="?attr/bb_surface"
                    android:inputType="text"
                    android:text="Share Wallet with Other People"
                    android:textColor="?attr/bb_secondaryText"
                    android:textSize="17dp"
                    app:layout_constraintStart_toEndOf="@id/ivCurrencyIcon"
                    app:layout_constraintTop_toTopOf="@id/ivCurrencyIcon" />

                <!-- Arrow icon (expand/collapse indicator) -->
                <ImageView
                    android:id="@+id/arrowIcon1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="2dp"
                    android:rotation="270"
                    android:src="@android:drawable/arrow_down_float"
                    app:layout_constraintStart_toEndOf="@+id/tvShareWallet"
                    app:layout_constraintStart_toStartOf="@id/tvShareWallet"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/bb_primaryText" />
            </LinearLayout>


            <!-- Row for enabling notifications -->
            <LinearLayout
                android:id="@+id/rowSelectEnableNotifications"
                style="@style/RowStyle"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSelectShareWallet">

                <!-- Column containing notification toggle text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Notification header -->
                    <TextView
                        android:id="@+id/tvEnableNotifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Notifications"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="18dp" />

                    <!-- Info text -->
                    <TextView
                        android:id="@+id/tvNotificationsInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Get notified when there are changes to this wallet’s transactions."
                        android:textColor="?attr/bb_secondaryText"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvEnableNotifications" />
                </LinearLayout>

                <!-- Switch toggle -->
                <Switch
                    android:id="@+id/switchNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:checked="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvEnableNotifications" />
            </LinearLayout>


            <!-- Exclude from Total Row -->
            <LinearLayout
                android:id="@+id/rowSelectExcludeTotal"
                style="@style/RowStyle"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSelectEnableNotifications">

                <!-- Column containing exclude from total toggle text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Exclude from total header -->
                    <TextView
                        android:id="@+id/tvExcludeFromTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Exclude from Total"
                        android:textColor="?attr/bb_primaryText"
                        android:textSize="18dp" />

                    <!-- Info text -->
                    <TextView
                        android:id="@+id/tvExcludeInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Ignore this wallet and its balance in the Total Balance."
                        android:textColor="?attr/bb_secondaryText"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvEnableNotifications" />
                </LinearLayout>

                <!-- Switch toggle -->
                <Switch
                    android:id="@+id/switchExcludeTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:checked="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvEnableNotifications" />
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="?attr/bb_button"
        android:text="Save"
        android:textColor="?attr/bb_primaryText"
        android:textSize="16dp"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardWalletForm" />
</androidx.constraintlayout.widget.ConstraintLayout>
