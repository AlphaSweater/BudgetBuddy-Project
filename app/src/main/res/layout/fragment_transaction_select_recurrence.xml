<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/bb_background"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
>

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnGoBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="?attr/actionModeCloseDrawable"
            android:contentDescription="@string/back"
            app:tint="?attr/bb_primaryText" />

        <!-- Title -->
        <TextView
            android:id="@+id/txtRecurrence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Recurrence"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/bb_primaryText"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Recurrence Options -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleRecurrenceGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDaily"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Daily" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWeekly"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Weekly" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMonthly"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="wrap_content"
                android:text="Monthly" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnYearly"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Yearly" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>
</FrameLayout>
