<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.main.budget.addBudget.AddBudgetFragment">

    <!-- Top Bar (Back Arrow + Title) -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/bb_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="?attr/actionModeCloseDrawable"
            android:contentDescription="Back Arrow"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Budget"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/bb_primaryText"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Budget Details Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/budget_details_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/bb_surface"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Budget Details Section -->
        <LinearLayout
            android:id="@+id/budget_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Budget Name -->
        <LinearLayout
            android:id="@+id/rowSelectCategory"
            style="@style/RowStyle">

            <ImageView
                style="@style/RowIconStyle"
                app:tint="?attr/bb_button"
                android:src="@drawable/ic_account_balance_wallet_24" />

            <EditText
                android:id="@+id/budget_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Budget Name"

                android:textSize="16sp"/>
        </LinearLayout>

            <!-- Amount and Currency -->
            <LinearLayout
                android:id="@+id/rowSelectCategory"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    app:tint="?attr/bb_button"
                    android:src="@drawable/baseline_savings_24" />

                <EditText
                    android:id="@+id/amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Amount"
                    android:inputType="numberDecimal"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZAR"
                    android:textSize="16sp"
                    android:paddingStart="16dp"/>
            </LinearLayout>

            <!-- Budget Category -->
            <LinearLayout
                android:id="@+id/rowSelectCategory"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    app:tint="?attr/bb_button"
                    android:src="@drawable/ic_edit_note_24" />

                <TextView
                    android:id="@+id/budget_for_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Budget for"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/budget_for_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/bb_secondaryText"
                    android:text="All Expenses"/>

                <ImageView
                    android:id="@+id/budget_for_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:contentDescription="Arrow"
                    app:tint="?attr/colorOnPrimary"
                    android:background=""/>
            </LinearLayout>

            <!-- Recurrence -->
            <LinearLayout
                android:id="@+id/rowSelectCategory"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    app:tint="?attr/bb_button"
                    android:src="@drawable/ic_autorenew_24" />

                <TextView
                    android:id="@+id/recurrence_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Recurrence"
                    android:textColor="?attr/bb_primaryText"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/recurrence_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/bb_secondaryText"
                    android:text="Monthly"/>

                <ImageView
                    android:id="@+id/recurrence_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    app:tint="?attr/colorOnPrimary"
                    android:contentDescription="Arrow"/>
            </LinearLayout>

            <!-- Start Date -->
            <LinearLayout
                android:id="@+id/rowSelectCategory"
                style="@style/RowStyle">

                <ImageView
                    style="@style/RowIconStyle"
                    app:tint="?attr/bb_button"
                    android:src="@drawable/ic_calendar_month_24" />

                <TextView
                    android:id="@+id/start_date_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Date"
                    android:textColor="?attr/bb_primaryText"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/start_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/bb_secondaryText"
                    android:text="Today"/>

                <ImageView
                    android:id="@+id/start_date_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    app:tint="?attr/colorOnPrimary"
                    android:contentDescription="Arrow"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="@string/save"
        android:textColor="?attr/bb_primaryText"
        android:textSize="18sp"
        app:backgroundTint="?attr/bb_button"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/budget_details_card"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="98dp" />


</androidx.constraintlayout.widget.ConstraintLayout>