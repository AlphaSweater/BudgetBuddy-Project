<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical"
    android:background="?attr/bb_background">

    <!-- Icon and Text Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgCategoryIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            app:tint="?attr/bb_button" />

        <TextView
            android:id="@+id/txtCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/bb_primaryText"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- CheckBox styled as a pill -->
    <CheckBox
        android:id="@+id/checkSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="?attr/bb_primaryText"
        android:layout_marginStart="12dp"
        android:background="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text=""
        android:padding="4dp" />
</LinearLayout> 