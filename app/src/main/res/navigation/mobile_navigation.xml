<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <action
        android:id="@+id/action_homeFragment_to_walletMainFragment"
        app:destination="@id/navigation_wallet_main" />

    <action
        android:id="@+id/action_homeFragment_to_generalTransactionsFragment"
        app:destination="@id/navigation_general_transactions" />

    <action
        android:id="@+id/action_homeFragment_to_generalReportsFragment"
        app:destination="@id/navigation_general_reports" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <!-- AddTransactionFragment -->
    <fragment
        android:id="@+id/navigation_add_transaction"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.addTransaction.AddTransactionFragment"
        android:label="@string/title_transaction"
        tools:layout="@layout/fragment_add_transaction">

        <action
            android:id="@+id/action_addTransactionFragment_to_labelSelectorFragment"
            app:destination="@id/navigation_label_selector"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_down" />

        <action
            android:id="@+id/action_addTransactionFragment_to_categorySelectorFragment"
            app:destination="@id/navigation_category_selector"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_down" />

    </fragment>

    <fragment
        android:id="@+id/navigation_label_selector"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.addTransaction.labelSelectorPopUp.LabelSelectorFragment"
        android:label="Select Labels"
        tools:layout="@layout/fragment_select_label" />

    <fragment
        android:id="@+id/navigation_category_selector"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.addTransaction.categorySelectorPopUp.CategorySelectorFragment"
        android:label="Select Category"
        tools:layout="@layout/fragment_select_category" />

    <fragment
        android:id="@+id/navigation_add_new_category"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.addTransaction.addTransactionCat.addNewCat.AddNewCategoryFragment"
        android:label="Add Category"
        tools:layout="@layout/fragment_add_new_category" />

    <fragment
        android:id="@+id/navigation_wallet_main"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.wallet.WalletMainFragment"
        android:label="Wallet"
        tools:layout="@layout/fragment_wallet_main" />

    <fragment
        android:id="@+id/navigation_general_transactions"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.transactions.generalTransactions.GeneralTransactionsFragment"
        android:label="General Reports"
        tools:layout="@layout/fragment_general_transactions" />

    <fragment
        android:id="@+id/navigation_general_reports"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.transactions.generalReports.GeneralReportsFragment"
        android:label="General Reports"
        tools:layout="@layout/fragment_general_reports" />

    <fragment
        android:id="@+id/navigation_category_selector"
        android:name="com.synaptix.budgetbuddy.presentation.ui.main.addTransaction.categorySelectorPopUp.CategorySelectorFragment"
        android:label="Select Category"
        tools:layout="@layout/fragment_select_category" />

</navigation>